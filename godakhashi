
# Default message
DEFAULT_MSG="ম্যাএএএএএ! কী খবর আমি তো গোডাখাশী"
MESSAGE="${1:-$DEFAULT_MSG}"

# Calculate length of the message
LEN=${#MESSAGE}

# Generate a border line of dashes based on message length
BORDER=$(printf '%.0s-' $(seq 1 $(($LEN + 2))))

# Print the speech bubble
echo "  $BORDER"
echo "< $MESSAGE >"
echo "  $BORDER"
echo "         \\"
echo "          \\"
echo "           (_("
echo "           /_/'_____/)"
echo "          \"  |      |"
echo "             |\"\"\"\"\"\"|"
